= form_for(@duty_daily_schema) do |f|
  - if @duty_daily_schema.errors.any?
    #error_explanation
      %h2
        = pluralize(@duty_daily_schema.errors.count, "error")
        prohibited this duty_daily_schema from being saved:
      %ul
        - @duty_daily_schema.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :service_daily_schema
    %br/
    = f.text_field :service_daily_schema
  .actions
    = f.submit
