= form_for(@service_daily_schema) do |f|
  - if @service_daily_schema.errors.any?
    #error_explanation
      %h2
        = pluralize(@service_daily_schema.errors.count, "error")
        prohibited this service_daily_schema from being saved:
      %ul
        - @service_daily_schema.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :celebration_daily_schema
    %br/
    = f.text_field :celebration_daily_schema
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
