= form_for(@service_daily) do |f|
  - if @service_daily.errors.any?
    #error_explanation
      %h2
        = pluralize(@service_daily.errors.count, "error")
        prohibited this service_daily from being saved:
      %ul
        - @service_daily.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :type
    %br/
    = f.text_field :type
  .field
    = f.label :related
    %br/
    = f.text_field :related
  .field
    = f.label :cdscds
    %br/
    = f.text_field :cdscds
  .field
    = f.label :sds
    %br/
    = f.text_field :sds
  .actions
    = f.submit
