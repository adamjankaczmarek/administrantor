= simple_form_for(@celebration_daily_schema) do |f|
  - if @celebration_daily_schema.errors.any?
    #error_explanation
      %h2
        = pluralize(@celebration_daily_schema.errors.count, "error")
        prohibited this celebration_daily_schema from being saved:
      %ul
        - @celebration_daily_schema.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name
  = f.association :celebration_dailies
  = f.button :submit
