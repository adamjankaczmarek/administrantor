= form_for(@weekly_plan) do |f|
  - if @weekly_plan.errors.any?
    #error_explanation
      %h2
        = pluralize(@weekly_plan.errors.count, "error")
        prohibited this weekly_plan from being saved:
      %ul
        - @weekly_plan.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
